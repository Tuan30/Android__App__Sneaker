<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_imgchitiet"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_user_circle_24" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_imgchitiet"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/item_tenspchitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jordan"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/item_soluongchitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_sizechitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="size"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>